<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Expresion"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnBorrar"
                style="@style/ActionButtonStyle"
                android:text="CE"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/btnParentesisA"
                style="@style/ActionButtonStyle"
                android:text="("
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnParentesisC"
                style="@style/ActionButtonStyle"
                android:text=")"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnDividir"
                style="@style/ActionButtonStyle"
                android:text="/"
                android:textSize="32dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSiete"
                style="@style/NumberButtonStyle"
                android:text="7"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnOcho"
                style="@style/NumberButtonStyle"
                android:text="8"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnNueve"
                style="@style/NumberButtonStyle"
                android:text="9"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnMultiplicar"
                style="@style/ActionButtonStyle"
                android:text="*"
                android:textSize="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btnCuatro"
                style="@style/NumberButtonStyle"
                android:text="4" />

            <TextView
                android:id="@+id/btnCinco"
                style="@style/NumberButtonStyle"
                android:text="5"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnSeis"
                style="@style/NumberButtonStyle"
                android:text="6"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnMenos"
                style="@style/ActionButtonStyle"
                android:text="-"
                android:textSize="32dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btnUno"
                style="@style/NumberButtonStyle"
                android:text="1"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnDos"
                style="@style/NumberButtonStyle"
                android:text="2"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnTres"
                style="@style/NumberButtonStyle"
                android:text="3"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnMas"
                style="@style/ActionButtonStyle"
                android:text="+"
                android:textSize="32dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnPunto"
                style="@style/NumberButtonStyle"
                android:text="."
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnCero"
                style="@style/NumberButtonStyle"
                android:text="0"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/btnEliminar"
                style="@style/NumberButtonStyle"
                android:text="DEL"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/btnIgual"
                style="@style/ActionButtonStyle"
                android:text="="
                android:textSize="32dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>